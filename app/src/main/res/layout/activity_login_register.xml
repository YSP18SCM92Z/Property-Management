<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".login_register.LoginRegisterActivity"
    tools:targetApi="lollipop">

    <ImageView
        android:id="@+id/iv_login_register_logo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_400x150"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login_register_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="@string/login"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_login_register_logo"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="@+id/iv_login_register_logo"
        app:layout_constraintTop_toBottomOf="@+id/iv_login_register_logo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login_register_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="@string/register"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_login_register_login"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_login_register_login"
        app:layout_constraintTop_toBottomOf="@+id/btn_login_register_login" />

</androidx.constraintlayout.widget.ConstraintLayout>